{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section 
        class="avatar" 
        style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>    
    <section class="details">
        <h3>Informações do professor</h3>

        <div class="info">
            <div>Nome</div>
            <div>{{ teacher.name }}</div>
        </div>

        <div class="info">
            <div>Idade</div>
            <div>{{ teacher.age }}</div>
        </div>

        <div class="info">
            <div>Escolaridade</div>
            <div>{{ teacher.graduation }}</div>
        </div>

        <div class="info">
            <div>Tipo de aula</div>
            <div>
                <span>{{ "Presencial" if teacher.class_type == "P" else "À Distância" }}</span>                
            </div>
        </div>

        <div class="info">
            <div>Acompanhamento</div>
            <div>
                {% for class in teacher.classes %}
                    <span>{{ class }}</span>  
                {% endfor %}             
            </div>
        </div>

         <div class="info">
            <div>Desde</div>
            <div>{{ teacher.created }}</div>
        </div>

        <div class="buttons">
            <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>
            <form id="form-delete" action="/teachers?_method=DELETE" method="POST">
                <input type="hidden" 
                    name="id"
                    value="{{ teacher.id }}">
                <button type="submit">Deletar</button>
            </form>        
        </div>

        {% include "confirm.njk" %}
        
    </section>

</div>

{% endblock content %}