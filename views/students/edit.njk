{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section 
        class="avatar" 
        style="background: url({{ student.avatar_url }}) no-repeat center center / cover">
    </section>
    <section class="details">
        <form method="POST" action="/students?_method=PUT">
            <h3>Editar aluno</h3>
            <input type="hidden" 
                name="id"
                value="{{ student.id }}">
            {% include "students/fields.njk" %}
        </form>                  
    </section>
</div>

{% endblock content %}